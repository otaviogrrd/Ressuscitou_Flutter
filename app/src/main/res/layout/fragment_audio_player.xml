<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Fragment.AudioPlayer">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent" android:visibility="visible">
        <RelativeLayout
                android:background="@drawable/red_gradient"
                android:id="@+id/wrapper_player"
                android:layout_width="wrap_content"
                android:layout_height="60dp" android:visibility="visible">


            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_height="60dp"
                          android:id="@+id/progress_download"
                          android:visibility="visible">
                <ProgressBar
                        style="?android:attr/progressBarStyle"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:indeterminate="true"
                        android:indeterminateTintMode="src_atop"
                        android:indeterminateTint="@android:color/white"
                        android:id="@+id/progress_download_bar"
                        android:layout_weight="2"/>

                <TextView android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="8"
                          android:layout_gravity="center_vertical"
                          android:text="Carregando"
                          android:fontFamily="@font/quicksand_bold"
                          android:textColor="#ffffff"
                          android:id="@+id/feedback_msg"/>
            </LinearLayout>

            <LinearLayout android:padding="0dp"
                          android:id="@+id/player_audio"
                          android:visibility="gone"
                          android:orientation="horizontal"
                          android:layout_width="match_parent"
                          android:layout_height="80dp">

                <ImageButton
                        android:background="@drawable/ic_play"
                        android:id="@+id/btn_play"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical" android:layout_marginLeft="20dp"/>

                <ImageButton
                        android:background="@drawable/ic_pause"
                        android:id="@+id/btn_pause"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical" android:layout_marginLeft="20dp"/>


                <rm.com.audiowave.AudioWaveView
                        android:id="@+id/progresstime"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="16dp"
                        app:animateExpansion="true"
                        app:chunkWidth="10dp"
                        app:chunkHeight="24dp"
                        app:minChunkHeight="2dp"
                        app:chunkSpacing="1dp"
                        app:chunkRadius="1dp"
                        app:touchable="true"
                        android:layout_weight="8"
                        app:waveColor="@android:color/white"
                />

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="00:00"
                        android:textColor="#ffffff"
                        android:layout_alignParentRight="true"
                        android:id="@+id/time_all"
                        android:layout_toRightOf="@+id/progresstime"
                        android:layout_weight="3"
                        android:layout_gravity="center_vertical" android:textSize="14dp"
                        android:fontFamily="@font/quicksand_bold" android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>